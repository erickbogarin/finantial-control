@model IList<Financas.Entidades.Movimentacao>

<h2 class="ui header">Movimentações</h2>

@Html.ActionLink("Cadastrar", "Form", null, new { @class = "ui primary button" })

<table class="ui celled striped table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Usuario</th>
            <th>Valor</th>
            <th>Tipo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.Id</td>
                <td>@m.Usuario.Nome</td>
                <td>@m.Valor</td>
                <td>@m.Tipo</td>
            </tr>
        }
    </tbody>
</table>

