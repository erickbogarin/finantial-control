@model Financas.Models.BuscaMovimentacoesModel
@{
    ViewBag.Title = "Busca";
}

<h2>Busca</h2>


@using(@Html.BeginForm("Busca", "Movimentacao", FormMethod.Get)) {
<div class="ui form">
    <fieldset>
        <legend>
            Data da movimentação
        </legend>
        <div class="two fields">
            <div class="ui field">
                @Html.LabelFor(m => m.DataMinima, "Mínima")
                @Html.TextBoxFor(m => m.DataMinima, new { @class = "form-control" })
            </div>
            <div class="ui field">
                @Html.LabelFor(m => m.DataMaxima, "Máxima")
                @Html.TextBoxFor(m => m.DataMaxima, new { @class = "form-control" })
            </div>
        </div>
    </fieldset>
    <fieldset>
        <legend>
            Valor da movimentação
        </legend>
        <div class="two fields">
            <div class="ui field">
                @Html.LabelFor(m => m.Tipo, "Tipo")
                @Html.EnumDropDownListFor(m => m.Tipo, new { @class = "form-control" })
            </div>
            <div class="ui field">
                @Html.LabelFor(m => m.UsuarioId, "Usuário")
                @Html.DropDownListFor(m => m.UsuarioId,
                new SelectList(Model.Usuarios, "Id", "Nome"),
                "Escolha um usuário", new { @class = "form-control" })
            </div>
        </div>
    </fieldset>
    <div class="ui segment">
        <input type="submit" value="Buscar" class="ui button" />
    </div>
</div>

<table class="ui striped table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Data</th>
            <th>Valor</th>
            <th>Tipo</th>
            <th>Usuário</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var m in Model.Movimentacoes) { 
            <tr>
                <td>@m.Id</td>
                <td>@m.Data</td>
                <td>@m.Valor</td>
                <td>@m.Tipo</td>
                <td>@m.Usuario.Nome</td>
            </tr>
        }
    </tbody>


</table>
}

